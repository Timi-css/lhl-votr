<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Votr</title>

  <!-- jQuery -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <script src="/scripts/app.js"> </script>

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
    integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Google fonts (Roboto) -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&display=swap" rel="stylesheet" />

  <!-- Style CSS -->
  <link rel="stylesheet" href="/styles/styles.css" />
  <!-- Nav CSS -->
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/results.css">
  <!-- Voters CSS -->
  <link rel="stylesheet" href="/styles/voters.css" />
  <!-- Footer CSS -->
  <link rel="stylesheet" href="/styles/footer.css" />
</head>

<body>
  <!-- Top Nav bar -->
  <header class="main-header">
    <a href="/"><img src="/media/Votr Logo.png" class="logo"></img></a>

    <nav class="main-nav">
      <div class="main-nav-container">
        <ul class="main-nav-list">
          <li><a class="main-nav-link" href="/">Home</a></li>
          <li><a class="main-nav-link" href="/polls">Polls</a></li>
        </ul>
      </div>
    </nav>
  </header>

  <!-- Vote Section -->

  <form action="/vote" method="POST">

    <section class="votes">
      <section class="results-section">
        <div class="activity">
          <span class="activity-name">
            <%= firstChoice %>
          </span>

          <div class="ratings">
            <input type="radio" id="links" name="select" value="1"></input>
            <label for="links" class="links">1</label>
            <input type="radio" id="links" name="select" value="2"></input>
            <label for="links" class="links">2</label>
            <input type="radio" id="links" name="select" value="3"></input>
            <label for="links" class="links">3</label>
          </div>

          <span class="activity-name">
            <%= secondChoice %>
          </span>
          <div class="ratings">
            <input type="radio" id="links" name="select2" value="1"></input>
            <label for="links" class="links">1</label>
            <input type="radio" id="links" name="select2" value="2"></input>
            <label for="links" class="links">2</label>
            <input type="radio" id="links" name="select2" value="3"></input>
            <label for="links" class="links">3</label>
          </div>
          <span class="activity-name">
            <%= thirdChoice %>
          </span>
          <div class="ratings">
            <input type="radio" id="links" name="select3" value="1"></input>
            <label for="links" class="links">1</label>
            <input type="radio" id="links" name="select3" value="2"></input>
            <label for="links" class="links">2</label>
            <input type="radio" id="links" name="select3" value="3"></input>
            <label for="links" class="links">3</label>
          </div>
        </div>
        <div class="button-container">
          <button class="submit">Submit</button>
        </div>
  </form>

  </section>
  </section>

  <footer class="footer">
    <div class="social-box">
      <a href="#"><i class="fab fa-instagram"></i></a>
      <a href="#"><i class="fab fa-twitter"></i></a>
      <a href="#"><i class="fab fa-linkedin"></i></a>
      <a href="#"><i class="fab fa-github"></i></a>
    </div>

    <ul class="footer-list">
      <li><a class="footer-link" href="/">Home</a></li>
      <li><a class="footer-link" href="/polls">Polls</a></li>
      <!-- <li><a class="footer-cta" href="/Votr/views/polls.html">Create New Poll</a></li> -->
    </ul>
    <p class="copyright"> Copyright Votr @ 2022</p>
  </footer>
</body>

</html>
